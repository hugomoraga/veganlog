		<div class="row justify-content-center pb-5">
			<div class="col-lg-9">
      <%= link_to 'Volver', products_path, :class => 'btn btn-info m-3 ' %>

       <div class="card">
         <div class="card-body">

          <%= form_with(model: product, local: true) do |form| %>
            <% if product.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

                <ul>
                <% product.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <form>
              <div class="form-group">
                <%= form.label :Nombre, class: 'h5 custom-font' %>
                <%= form.text_field :productname, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label :'Nombre Comercial', class: 'h5 custom-font' %>
                <%= form.text_field :comercialName, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label :Marca, class: 'h5 custom-font' %>
                <%= form.text_field :markName, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label :Precio, class: 'h5 custom-font' %>
                <%= form.text_field :price, class: 'form-control'  %>
              </div>

              <div class="form-group">
                <%= form.label :Ingredientes, class: 'h5 custom-font' %>
                <%= form.text_field :ingredients, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.label :Descripcion, class: 'h5 custom-font' %>
                <%= form.text_field :description, class: 'form-control' %>
              </div>
              
              <div class="form-group">
                <%= form.label :totalScore, class: 'h5 custom-font' %>
                <%= form.text_field :totalScore, class: 'form-control' %>
              </div>
              
              <div class="form-group">
                <%= form.label :Categoria, class: 'h5 custom-font'  %> <br>
                <%= form.select(:category_id, options_for_select(Category.pluck(:name, :id)), { prompt: "Seleccionar Categoria" }, { class: "form form-group form-control" }) %>
              </div>

              <div class="form-group">
                <%= form.label :Tienda, class: 'h5 custom-font'  %> <br>
                <%= form.select(:store_id, options_for_select(Store.pluck(:name, :id)), { prompt: "Seleccionar Tienda" }, { class: "form form-group form-control" }) %>
              </div>
    
              <div class="form-group">
                <%= form.label :Imagen, class: 'h5 custom-font'  %> <br>
                <%= form.file_field :image, class: 'btn btn-info' %>
             
              <span class="actions">
                <%= form.submit 'Crear Producto', :class => 'btn btn-info m-3'  %>
              </span>
              </div>
          </form>
        <% end %>
        </div>
      </div>
    </div>
  </div>

