<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Productname</th>
      <th>Comercialname</th>
      <th>Markname</th>
      <th>Price</th>
      <th>Ingredients</th>
      <th>Description</th>
      <th>Imgurl</th>
      <th>Addressid</th>
      <th>Storeid</th>
      <th>Userid</th>
      <th>Totalscore</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.productName %></td>
        <td><%= product.comercialName %></td>
        <td><%= product.markName %></td>
        <td><%= product.price %></td>
        <td><%= product.ingredients %></td>
        <td><%= product.description %></td>
        <td><%= product.imgUrl %></td>
        <td><%= product.addressId %></td>
        <td><%= product.storeId %></td>
        <td><%= product.userId %></td>
        <td><%= product.totalScore %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

