<!-- Carrusel JS con Cartas Bootstrap -->
<div class="PriceBlocks-sliderContainer pb-3">
  <div class="PriceBlocks-slider" >
    <% @products_last .each do |product| %>
      <div class="PriceBlock-container">
          <div class="card m-1">
        <div class="Block">
          <div class="Block-top" style="height: 180px;">
            <div class="card-img-top" >
              <% if product.image.attached? %>
                  <%= link_to (image_tag product.image.variant(resize: '200x200')), product %> 
              <% end %>
            </div>
          </div>
              <div class="card-body" style="height: 130px;">
                <p class="card-title text-info font-weight-bold"><%=product.productname %></p>
                <p class="card-text text-secundary"><%=product.comercialName %> </p>
                <p class="card-text tex-secundary"> $ <%=product.price %></p>
              </div> 
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
  

<h1 class="text-center custom-font pt-5">Busqueda</h1>
      <div id="search">

        <form>
          <div class="form-group mx-auto" style="max-width: 50vw;">
            <label for="formGroupExampleInput"></label>
             <input type="text" name="q" class="form-control form-control-lg card-custom" id="formGroupExampleInput" placeholder="buscar...">
          </div>
        <form><br>
      </div>
          
      <div id="append">
      </div>


