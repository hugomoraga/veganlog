<p id="notice"><%= notice %></p>



<div class="container">
  <div class="card border-primary mb-4 card-custom mx-auto">
  <div class="row">
    <div class="col-md-4 d-flex justify-content-center py-2">
      <td><%= image_tag @product.image , class:'card-img-top displayed' %></td>
    </div>
        <div class="col-md-8" style="background-color: #37C8AB;">
          <div class="card-body">
          <br>
            <h5 class="card-title font-weight-bold custom-font-white">Producto: <span class="h5"> <%=@product.productname%> </span></h5>
            <h5 class="card-title font-weight-bold custom-font-white">Nombre:<span class="h5"> <%=@product.comercialName%></span></h5>
            <h5 class="card-title font-weight-bold custom-font-white">Marca:<span class="h5"> <%=@product.markName %></span></h5>
            <h5 class="card-title font-weight-bold custom-font-white">Precio:<span class="h5"> $ <%=@product.price %></span></h5>
            <h5 class="card-title font-weight-bold custom-font-white">Categoria:<span class="h5"> <%=@product.category.name  %></h5>
            <h5 class="card-title font-weight-bold custom-font-white">Ingredientes:<span class="h5"> <%=@product.ingredients  %></h5>
            <div class="card-footer">
          </div>
            <%=link_to 'Editar', edit_product_path(@product), class: 'btn btn-outline-success custom-font-white'%>
            <%=link_to 'Eliminar', @product,method: :delete, data:{confirm: 'Are you sure?'}, class: 'btn btn-outline-success custom-font-white'%>
            <%=link_to 'Volver', products_path, class: 'btn btn-outline-success custom-font-white'%>

            <br>
            <p class="card-text text-right h5"><small class="text-muted">Last updated: <%=time_ago_in_words(@product.updated_at)%></small></p>

          </div>
        </div>
  </div>
  </div>
 
</div>