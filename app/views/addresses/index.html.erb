<div class="container p-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-12">
                  <div>
                  <p id="notice"><%= notice %></p>
                  <%= link_to 'New Address', new_address_path, :class => 'btn btn-info m-3' %>
                  </div>
                <div class="card p-3">

                  <table>
                    <thead>
                      <tr>
                        <th>Direccion</th>
                        <th>Latitud</th>
                        <th>Longitud</th>
                        <th>Tienda</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @addresses.each do |address| %>
                        <tr>
                          <td><%= address.name %></td>
                          <td><%= address.latitude %></td>
                          <td><%= address.longitude %></td>
                          <td><%= address.store.name %></td>
                          <td><%= link_to 'Mostrar', address %></td>
                          <% if current_user.has_role? :admin %>

                          <td><%= link_to 'Editar', edit_address_path(address) %></td>
                          <td><%= link_to 'Eliminar', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          <% end %>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
              </div>
        </div>
    </div>
</div>