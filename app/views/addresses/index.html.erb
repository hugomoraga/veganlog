<p id="notice"><%= notice %></p>

<div class="container">

  <h1 class="text-center custom-font">Addresses</h1>
  <%= link_to 'New Address', new_address_path, :class => 'btn btn-info m-3' %>


  <div class="row pb-5">
    <div class="card p-2">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= address.latitude %></td>
        <td><%= address.longitude %></td>
        <td><%= address.store.name %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>

</div>