
<%= form_with(model: @store) do |form| %>

  <div class="d-flex justify-content-center">
    <div class="box-form">

      <div class="form-group">
        <%= form.label :Nombre, class: 'h4' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :Url, class: 'h4' %>
        <%= form.text_field :url, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :direccion, class: 'h4' %>
         <div class="actions">
        <%= add_address_button(form) %>
        </div>
      </div>
    
      <ul id="lista_address">
        <%= form.fields_for :addresses do |addresses_form| %>
        <%= render 'addresses/addresses_fields', addresses_form: addresses_form %>
      <% end %>
      </ul>
      
      <div class="actions">
        <%= form.submit nil, :class => 'btn btn-info'  %>
      </div>
      <% end %>


    </div>
  </div>

<script>
$(document).on('ready turbolinks:load', function(){
    $('#add-address').click(function(e){
        e.preventDefault()
        var new_address =$(this).data('address')
        //$(new_address).insertAfter('ul')
        $('#lista_address').append(new_address)
    })
})
</script>



