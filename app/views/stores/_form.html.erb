
<%= form_with(model: store, local: true) do |form| %>
<div class="container p-2">
    <div class="row">
    <div class="col-md-12">
     <%= link_to 'Back', stores_path, class:'btn btn-info' %>
     <div class="card">

     <div class="card-body">



      <div class="form-group">
        <%= form.label :Nombre, class: 'h4' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :Url, class: 'h4' %>
        <%= form.text_field :url, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :direccion, class: 'h4' %>
      </div>
      <div id='addresses'>
    <%= form.fields_for :addresses do |addresses_form| %>
    <%= render 'address_fields', :form => addresses_form %>
  <% end %>
  <div class='Links'>
  <%= link_to_add_association 'add Direccion', form, :addresses, form_name: 'form' %>
  </div>
  </div>
    
  
      <div class="p-3 actions">
        <%= form.submit %>
      </div>
      <% end %>
      </div>
      </div>
      </div>
    </div>
  </div>



